<?xml version="1.0"?>
<odoo>

    <record id="view_res_config_form" model="ir.ui.view">
        <field name="name">res.config.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//div[@id='show_margins']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" title="">
                <div class="o_setting_right_pane">
                <label for="sale_limit"/>
                <div class="text-muted">
                Sales Limit:
                </div>
                <div class="content-group">
                <div class="mt16">
                <field name="sale_limit"/>
                </div>
                </div>
                </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>